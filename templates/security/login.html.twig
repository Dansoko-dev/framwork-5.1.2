{% extends 'base.html.twig' %}

{% block title 'Login'%}

{% block body %}
    <div class="container">
        <h1>Login form</h1>
        <form method="POST">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{ app.session.get(constant('App\\Controller\\SecurityController::LAST_EMAIL')) }}">
             <label for="email">password:</label>
            <input type="password" id="password" name="password">
            <input type="hidden" name="csrf_token" value="{{ csrf_token('moustapha') }}">

            <label for="_remember_me">
                <input type="checkbox" name="_remember_me" id="_remember_me"> Remember me
            </label>
            <input type="submit" value="Login">
        </form>
    </div>
{% endblock %}
